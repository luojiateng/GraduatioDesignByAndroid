<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--填充-->
    <solid android:color="@color/front_color" />
    <!--描边-->
    <stroke
        android:width="1dp"
        android:color="@color/split_line_fill" />
    <!--图形与周围边界的间隔-->
    <padding
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp" />
    <!--圆角，例如bottomLeftRadius:指定右下角-->
    <corners android:radius="10dp" />
    <!--gradient 渐变-->
</shape>